# game/script.rpy:538
translate korean diner_044f8099:


    # ai "Ah!"
    ai "아!"


# game/script.rpy:539
translate korean diner_5040c0ca:


    # ai "That was good."
    ai "맛있었어…"


# game/script.rpy:540
translate korean diner_8c4bfa11:


